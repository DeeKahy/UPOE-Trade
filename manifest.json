{
  "manifest_version": 2,
  "name": "UPOE Trade Manager",
  "version": "1.0.0",
  "description": "Save and organize Path of Exile trade searches with categories and quick access",
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg",
    "128": "icons/icon-128.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://www.pathofexile.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.pathofexile.com/trade/*"
      ],
      "js": [
        "storage.js",
        "content-script.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "storage.js",
      "background.js"
    ]
  },
  "sidebar_action": {
    "default_title": "POE Trade Searches",
    "default_panel": "sidebar.html",
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "upoe-trade@example.com",
      "strict_min_version": "140.0",
      "update_url": "https://raw.githubusercontent.com/DeeKahy/UPOE-Trade/main/beta-updates.json",
      "data_collection_permissions": {
        "required": [
          "websiteActivity"
        ],
        "optional": []
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  }
}
